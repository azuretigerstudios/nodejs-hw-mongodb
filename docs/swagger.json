{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "<uygulamanızın adı>",
    "license": {
      "name": "Apache 2.0",
      "url": "<http://www.apache.org/licenses/LICENSE-2.0.html>"
    },
    "description": "<uygulamanızın açıklaması>\n"
  },
  "servers": [
    {
      "url": "<http://localhost:3000>"
    },
    {
      "url": null
    }
  ],
  "tags": null,
  "paths": {
    "paths": null,
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get contact by ID",
        "operationId": "getContactById",
        "description": "Kullanıcının kendi koleksiyonundan, benzersiz ID değerini kullanarak belirli bir kontağı getirmesini sağlar.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Getirilecek kontağın benzersiz ID değeri",
            "schema": {
              "type": "string",
              "example": "6585f5e8b1d9c2a1b8e4f1a2"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Kontak başarıyla bulundu.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Kontak bulunamadı.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "Contact not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Create a new contact",
        "operationId": "createContact",
        "description": "Yeni bir kontak oluşturur. Bu uç nokta fotoğraf yüklemeyi desteklediği için veriler \"multipart/form-data\" formatında gönderilmelidir.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Kontağın adı",
                    "example": "Ali Veli"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "description": "Telefon numarası",
                    "example": "+905551112233"
                  },
                  "email": {
                    "type": "string",
                    "description": "E-posta adresi",
                    "example": "ali@example.com"
                  },
                  "isFavourite": {
                    "type": "boolean",
                    "description": "Favori durumu",
                    "example": false
                  },
                  "contactType": {
                    "type": "string",
                    "enum": [
                      "work",
                      "home",
                      "personal"
                    ],
                    "default": "personal",
                    "example": "work"
                  },
                  "photo": {
                    "type": "string",
                    "format": "binary",
                    "description": "Yüklenecek profil fotoğrafı (jpg, png, webp)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kontak başarıyla oluşturuldu.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Doğrulama hatası (Eksik veya yanlış formatta veri)."
          },
          "401": {
            "description": "Yetkilendirme hatası."
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get contact by ID",
        "operationId": "getContactById",
        "description": "Retrieve a specific contact's details using its unique identifier.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Unique ID of the contact",
            "schema": {
              "type": "string",
              "example": "60d21b4667d0d8992e610c85"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved contact",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Patch a contact",
        "operationId": "patchContact",
        "description": "Mevcut bir kontağın bilgilerini kısmen günceller. Fotoğraf dahil tüm alanlar isteğe bağlıdır (optional).",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Güncellenecek kontağın benzersiz ID değeri",
            "schema": {
              "type": "string",
              "example": "6585f5e8b1d9c2a1b8e4f1a2"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Deniz Yeni"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "example": "+905550009988"
                  },
                  "email": {
                    "type": "string",
                    "example": "yeni@example.com"
                  },
                  "isFavourite": {
                    "type": "boolean",
                    "example": true
                  },
                  "contactType": {
                    "type": "string",
                    "enum": [
                      "work",
                      "home",
                      "personal"
                    ],
                    "example": "home"
                  },
                  "photo": {
                    "type": "string",
                    "format": "binary",
                    "description": "Yeni profil fotoğrafı"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Kontak başarıyla güncellendi.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully patched a contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Yetkilendirme hatası."
          },
          "404": {
            "description": "Güncellenmek istenen kontak bulunamadı."
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Delete a contact",
        "operationId": "deleteContact",
        "description": "Belirtilen ID değerine sahip kontağı sistemden kalıcı olarak siler.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Silinecek kontağın benzersiz ID değeri",
            "schema": {
              "type": "string",
              "example": "6585f5e8b1d9c2a1b8e4f1a2"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Kontak başarıyla silindi (İçerik döndürülmez)."
          },
          "401": {
            "description": "Yetkilendirme hatası (Token eksik veya geçersiz)."
          },
          "404": {
            "description": "Silinmek istenen kontak bulunamadı."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Kontağın benzersiz veritabanı ID'si",
            "example": "6585f5e8b1d9c2a1b8e4f1a2"
          },
          "name": {
            "type": "string",
            "description": "Kontağın tam adı",
            "example": "Deniz Çeliktaş"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Telefon numarası",
            "example": "+905554443322"
          },
          "email": {
            "type": "string",
            "description": "E-posta adresi",
            "example": "deniz@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Kontağın favori olup olmadığı bilgisi",
            "example": false
          },
          "contactType": {
            "type": "string",
            "description": "Kontağın türü",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "photo": {
            "type": "string",
            "nullable": true,
            "description": "Fotoğraf URL bağlantısı",
            "example": "https://res.cloudinary.com/..."
          },
          "userId": {
            "type": "string",
            "description": "Kullanıcı ID'si",
            "example": "6585f5e8b1d9c2a1b8e4f111"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}